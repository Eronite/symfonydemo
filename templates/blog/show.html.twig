{% extends 'base.html.twig' %}

{% block body %}
    <article>
        <h2>{{ article.title }}</h2>
        <div class="metadata">Ecrit le
            {{ article.createdAt | date('d/m/Y') }}
            dans la catégorie
            {{article.category.title}}</div>
        <div class="content">
            <img src="{{ article.image }}" alt="">
            {{ article.content | raw }}
        </div>

        <!-- boucle qui affiche les commentaires de l'article -->
        <section id="commentaires">
            <h1>{{ article.comments | length }}
                comments</h1>
            {% for comment in article.comments %}
                <div class="commment">
                    <div class="row">
                        <div class="col-3">
                            {{comment.author}}
                            (<small>{{ comment.createdAt | date('d/m/Y à H:i') }}</small>)
                        </div>
                        <div class="col">
                            {{ comment.content | raw }}
                        </div>
                    </div>
                </div>
            {% endfor %}

            <!-- formulaire pour les commentaires -->
            {% if app.user %}
                {{ form_start(commentForm) }}
                {{ form_row(commentForm.author, { 'attr': {'placeholder': 'Name'} }) }}
                {{ form_row(commentForm.content, { 'attr': {'placeholder': 'Comment'} }) }}
                <button type="submit" class="btn btn-success">Post comment</button>
                {{ form_end(commentForm) }}
            {% else %}
                <h2>You must be logged in to post comments.</h2>
                <a href="{{ path('security_login') }}" class="btn btn-primary">Log in</a>
            {% endif %}
        </section>
    </article>
{% endblock %}
